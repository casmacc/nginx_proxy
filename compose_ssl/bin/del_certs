#!/usr/bin/env ruby

def run(domain)
  cmd = "sudo certbot delete --cert-name #{domain}"
  system cmd
end

usage  = "Usage: #{$0.split("/").last} <fqdn>"

abort(usage)  if ARGV.length != 1

domain = ARGV[0]

log = File.open("/tmp/certbot", "a")
log.puts " BEG-DEL #{Time.now} ".center(80, '-')

run(domain)

log.puts " END-DEL #{Time.now} ".center(80, '-')
log.close
