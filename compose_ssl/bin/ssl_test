#!/usr/bin/env ruby

require_relative "./Base"

class Presenter
  attr_reader :dom

  def initialize(dom)
    @dom = dom
  end

  def to_s
    "#{ping} #{wget} #{html} #{dom}"
  end

  private 

  def ping() dom.pingable? ? " xx " : " -- " end
  def html() dom.htmlable? ? " xx " : " -- " end
  def wget() dom.getable?  ? " xx " : " -- " end
end

puts "PING WGET HTML DOMAIN"

DOMS.each do |dom|
  puts Presenter.new(dom).to_s
end
